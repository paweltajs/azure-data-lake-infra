{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "northeurope"
        },
        "subPrefix": {
            "type": "string",
            "defaultValue": "cm002-dev"
        }
    },
    "variables": {
        "rgName": "[concat('rg-music-lake-', parameters('subPrefix')) ]",
        "rgNameMusicLake": "[concat('rg-music-lake-', parameters('subPrefix')) ]",
        "templateUrlRgMusicLake": "https://raw.githubusercontent.com/paweltajs/azure-data-lake-infra/feature/7-adding-rg-template-to-folder/arm-templates/resources/rg_music_lake.json"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "name": "[variables('rgName')]",
            "location": "[parameters('location')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "linkedTemplate",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "outer"
                },
                "templateLink": {
                    "uri": "[variables('templateUrlRgMusicLake')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "rgName": {
                        "value": "[variables('rgNameMusicLake')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}